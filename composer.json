{
    "name": "jorijn/bitcoin-dca",
    "description": "Tool for automatically buying and withdrawing Bitcoin",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jorijn Schrijvershof",
            "email": "jorijn@jorijn.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/config": "^6.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-iconv": "*",
        "ext-bcmath": "*",
        "protonlabs/bitcoin": "1.0.x-dev",
        "symfony/event-dispatcher": "^6.0",
        "monolog/monolog": "^2.0",
        "symfony/http-client": "^6.0",
        "symfony/serializer": "^6.0",
        "symfony/property-access": "^6.0",
        "symfony/mailer": "^6.0",
        "league/html-to-markdown": "^5.0",
        "symfony/notifier": "^6.0",
        "symfony/telegram-notifier": "^6.0",
        "symfony/proxy-manager-bridge": "^6.0",
        "symfony/amazon-mailer": "^6.0",
        "symfony/google-mailer": "^6.0",
        "symfony/mailchimp-mailer": "^6.0",
        "symfony/mailgun-mailer": "^6.0",
        "symfony/mailjet-mailer": "^6.0",
        "symfony/postmark-mailer": "^6.0",
        "symfony/sendgrid-mailer": "^6.0",
        "symfony/sendinblue-mailer": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Jorijn\\Bitcoin\\Dca\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Jorijn\\Bitcoin\\Dca\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "php-cs-fixer": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "rector/rector": "^0.15.5"
    }
}
